<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ru.ivos.custom_clock_view_for_vk.ClockViewDefaultBackground
            android:id="@+id/clockas"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_marginTop="16dp" />

        <ru.ivos.custom_clock_view_for_vk.ClockViewUserBackground
            android:id="@+id/viewClock"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_marginTop="16dp"
            app:drawNumbers="true"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnChangeBack"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="32dp"
            android:text="Change background"/>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>